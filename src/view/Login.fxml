            <ToggleGroup fx:id="LanguageTG" />
         </toggleGroup>
      </RadioButton>
      <RadioButton fx:id="FrenchBtn" layoutX="362.0" layoutY="318.0" mnemonicParsing="false" onAction="#onActionEnglishButton" text="French" toggleGroup="$LanguageTG" />
   </children>
</AnchorPane>
