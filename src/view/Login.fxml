<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.LoginForm">
   <children>
      <Label alignment="CENTER" layoutX="149.0" layoutY="65.0" prefHeight="27.0" prefWidth="303.0" text="Log in to Scheduling Application">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      <Label layoutX="213.0" layoutY="108.0" text="Username" />
      <Label layoutX="213.0" layoutY="160.0" text="Password" />
      <TextField fx:id="searchPartTxt" layoutX="213.0" layoutY="125.0" onAction="#onActionSearchPart" prefHeight="25.0" prefWidth="166.0">
         <padding>
            <Insets bottom="5.0" />
         </padding>
      </TextField>
      <TextField fx:id="searchPartTxt1" layoutX="213.0" layoutY="177.0" onAction="#onActionSearchPart" prefHeight="25.0" prefWidth="166.0">
         <padding>
            <Insets bottom="5.0" />
         </padding>
      </TextField>
      <Button layoutX="271.0" layoutY="228.0" mnemonicParsing="false" onAction="#onActionLogin" text="Log In" />
      <Label layoutX="163.0" layoutY="277.0" text="User Location:" />
      <Label layoutX="246.0" layoutY="277.0" text="Location" />
      <Label layoutX="163.0" layoutY="318.0" prefHeight="17.0" prefWidth="136.0" text="Language Preference:" />
